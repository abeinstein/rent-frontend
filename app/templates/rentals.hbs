<div class="col-md-12">
    <form {{action 'createRental' on="submit"}} class="form-inline textbook-form" role="form">
        <div class="form-group">
            {{input type="text" class="form-control textbook-input" placeholder="Add a textbook (e.g. 'Rudin's Analysis, 4th ed')" value=description }}
        </div>
        <div class="form-group">
            {{input type="text" class="form-control price-input" placeholder="Price" value=price }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add</button>   
        </div>
    </form>
    

    <table class="table table-striped" id="rental-list">
        {{#each rental in controller}}
            <tr>
                <td>{{rental.description}}</td>
                <td> ${{rental.price}}.00</td>
                <td> <button {{action 'requestRental' rental}} type="button" class="btn btn-success">Request</button></td>
            </tr>
        {{/each}}
    </table>
</div>
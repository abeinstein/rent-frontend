<div class="col-md-12">
    <form {{action 'createRental' on="submit"}}class="form-inline" role="form">
        <div class="form-group">
            {{input type="text" class="form-control" placeholder="Add a textbook (e.g. 'Rudin's Analysis, 4th ed')" value=description }}
        </div>
        <div class="form-group">
            {{input type="text" class="form-control" placeholder="Name a price" value=price }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add</button>   
        </div>
    </form>
    

    <table class="table table-striped" id="rental-list">
        {{#each controller}}
            <tr>
                <td>{{description}}</td>
                <td> ${{price}}.00</td>
                <td> <button type="button" class="btn btn-success">Request</button></td>
            </tr>
        {{/each}}
    </table>
</div>